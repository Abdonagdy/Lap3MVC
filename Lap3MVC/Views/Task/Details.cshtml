@using Lap3MVC.Models;
@model Lap3MVC.Models.Task
@{
	var user = (User)ViewBag.Owner;
}
<div class="container text-center m-5">
	<a class="btn btn-primary m-3" asp-controller="task" asp-action="New">
		AddTask
	</a>
	<a class="btn btn-primary m-3" asp-controller="task" asp-action="Index">
		BackToList
	</a>
	<div class="row bg-success p-3 fs-6">
		<div class="col">
			Name
		</div>
		<div class="col">
			Status
		</div>
		<div class="col">
			Description
		</div>
		<div class="col">
			AssignDate
		</div>



	</div>
</div>
@if (Model != null)
{

	<div class="container text-center m-5">
		<div class="row">
			<div class="col">
				@Model.Name
			</div>
			<div class="col">
				@Model.Status
			</div>
			<div class="col">
				@Model.Description
			</div>
			<div class="col">
				@Model.AssignDate
			</div>
			
		</div>
	</div>


}



