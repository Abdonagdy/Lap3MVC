@using Lap3MVC.Models;
@model Lap3MVC.Models.Task;

@{
	SelectList statusList = new SelectList(Enum.GetValues(typeof(Lap3MVC.Models.TaskStatus)));
	SelectList cats = new SelectList(ViewBag.Categories, "ID","Category");
	SelectList users = new SelectList(ViewBag.Users,"Id","Name");
}
    
<div class="container-fluid mt-5 shadow  bg-info rounded p-5 w-25">
	                        <h5 class="text-white text-center" >Add New Task</h5>
	<form asp-action="New" asp-controller="Task" asp-antiforgery="true" method="post">
		<div asp-validation-summary="ModelOnly" ></div>
		<div class="text-white">
			<label asp-for="Name"></label>
			<input asp-for="Name" class="form-control" />
			<span asp-validation-for="Name" class="text-danger"></span>

		</div>
		<div class="text-white">
			<label asp-for="Description"></label>
			<input asp-for="Description" class="form-control" />
			<span asp-validation-for="Description" class="text-danger"></span>

		</div>
		<div class="text-white">
			<label asp-for="AssignDate"></label>
			<input asp-for="AssignDate" class="form-control" />
			<span asp-validation-for="AssignDate" class="text-danger"></span>

		</div>
		<div class="text-white mt-2">
			<label asp-for="Status"></label>
			<select asp-for="Status" asp-items="statusList" class="form-control">
			</select>
			<span asp-validation-for="Status" class="text-danger"></span>

		</div>
		<div class="text-white mt-2">
			<label asp-for="UserId"></label>
			<select asp-for="UserId" asp-items="users" class="form-control">

			</select>
			<span asp-validation-for="UserId" class="text-danger"></span>

		</div>
		<div class="text-white mt-2">
			<label asp-for="CategoryId"></label>
			<select asp-for="CategoryId" asp-items="cats" class="form-control">
			</select>
			<span asp-validation-for="CategoryId" class="text-danger"></span>

		</div>
		
		<input type="submit" class="btn btn-success text-center mt-2" value="Save" />

	</form>

</div>
